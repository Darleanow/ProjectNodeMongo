extends layout

block content
  h2 Carte des spots
  #map(style="height: 500px;")
  script.
    const map = L.map('map').setView([48.85, 2.35], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

    fetch('/api/spots')
      .then(res => res.json())
      .then(spots => {
        spots.forEach(s => {
          L.marker([s.coords.lat, s.coords.lng])
            .addTo(map)
            .bindPopup(`<b>${s.title}</b><br>${s.description}`);
        })
      });
